const express = require('express')
const roomCatagoryController = require('../controllers/roomCatagoryController')
const { verifyToken, adminOnly } = require('../service/auth')
const uploads = require('../service/uploads')

const router = express.Router()

router.post('/',verifyToken,adminOnly,uploads.single('room_catagory_images'),roomCatagoryController.createRoomCatagory)
router.get('/',roomCatagoryController.getAllRoomCatagory)
router.get('/offers',roomCatagoryController.getCatByExclusiveDeals)
router.get('/:id/rooms',roomCatagoryController.getRoomByCatagory)
router.get('/:id',roomCatagoryController.getRoomCatagoryByID)
router.put('/:id',verifyToken,adminOnly,uploads.single('room_catagory_images'),roomCatagoryController.updateRoomCatagory)
router.delete('/:id',verifyToken,adminOnly,roomCatagoryController.deleteRoomCatagory)

module.exports=router